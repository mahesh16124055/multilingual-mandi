    "type": "git",
    "url": "https://github.com/mahesh16124055/multilingual-mandi.git"
  },
  "homepage": "https://github.com/mahesh16124055/multilingual-mandi#readme",
  "bugs": {
    "url": "https://github.com/mahesh16124055/multilingual-mandi/issues"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}