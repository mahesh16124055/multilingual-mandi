# Production Environment Variables for Netlify
# These will be set in Netlify dashboard

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend API URL (will be your Render backend URL)
NEXT_PUBLIC_SOCKET_URL=https://your-backend.onrender.com

# Hugging Face API Key (for client-side translation fallback)
NEXT_PUBLIC_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# App Environment
NEXT_PUBLIC_APP_ENV=production

# Enable exploration mode for seamless user experience
NEXT_PUBLIC_DEMO_MODE=true