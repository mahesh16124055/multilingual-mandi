# Server Configuration
PORT=3001
NODE_ENV=development

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Hugging Face API for AI Translation (Fallback)
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_key_here

# Google Gemini API for AI Translation & Negotiation (Primary)
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSy_your_key_here

# Market Data API (Optional - for real market prices)
# Get API key from https://agmarknet.gov.in/
AGMARKNET_API_KEY=

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key

# Database Configuration (if using direct PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/multilingual_mandi

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# External APIs
AGMARKNET_API_KEY=your_agmarknet_api_key
WEATHER_API_KEY=your_weather_api_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Feature Flags
ENABLE_PRICE_PREDICTION=true
ENABLE_VOICE_TRANSLATION=true
ENABLE_MARKET_DATA_SYNC=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_API_KEY=your_analytics_key